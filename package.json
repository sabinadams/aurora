{
  "name": "prisma-aurora",
  "version": "1.3.3",
  "description": "CLI tool that orchestrates prisma files in a way that allows multiple .prisma files with cross-relations",
  "main": "./lib/index.js",
  "bin": {
    "aurora": "./lib/index.js"
  },
  "files": [
    "lib/",
    "!/lib/tests"
  ],
  "scripts": {
    "start": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/index.ts",
    "create": "npm run build && npm run test",
    "build": "tsc -p .",
    "local": "sudo npm i -g && aurora",
    "refresh": "rm -rf ./node_modules ./package-lock.json && npm install",
    "test": "jest",
    "test-output": "jest -- ./src/tests/aurora.test.ts",
    "test-watch": "jest --watch",
    "prettier-format": "prettier --config .prettierrc 'src/**/*.ts' --write"
  },
  "keywords": [
    "prisma",
    "schema",
    "merge",
    "cli"
  ],
  "author": "Sabin Adams",
  "license": "ISC",
  "devDependencies": {
    "@types/clear": "^0.1.2",
    "@types/figlet": "^1.5.4",
    "@types/glob": "^7.2.0",
    "@types/jest": "^27.0.3",
    "@types/node": "^17.0.14",
    "jest": "^27.4.4",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.1",
    "prisma": "^3.7.0",
    "ts-jest": "^27.1.1",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.3"
  },
  "dependencies": {
    "@prisma/client": "^3.7.0",
    "@prisma/sdk": "^3.8.1",
    "chalk": "4.1.2",
    "clear": "^0.1.0",
    "commander": "^9.0.0",
    "conf": "^10.1.1",
    "figlet": "^1.5.2",
    "glob": "^7.2.0",
    "path": "^0.12.7",
    "tsc-watch": "^4.5.0"
  }
}